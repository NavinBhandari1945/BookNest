        "properties": {
          "email": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string",
            "format": "email"
          },
          "role": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
