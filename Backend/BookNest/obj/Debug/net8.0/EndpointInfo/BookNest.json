            "minLength": 0,
            "type": "string"
          },
          "publicationDate": {
            "minLength": 1,
            "type": "string"
          },
          "language": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "category": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string"
          },
