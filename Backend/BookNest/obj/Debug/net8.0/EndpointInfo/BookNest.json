  "components": {
    "schemas": {
      "BookInfosStringModel": {
        "required": [
          "author",
          "availableQuantity",
          "bookName",
          "category",
          "discountEnd",
          "discountPercent",
          "discountStart",
          "format",
          "language",
          "listedAt",
          "photo",
          "price",
          "publicationDate",
          "publisher",
          "title"
        ],
        "type": "object",
        "properties": {
          "bookId": {
            "type": "integer",
            "format": "int32"
          },
          "bookName": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "price": {
            "minimum": 0.01,
            "type": "number",
            "format": "double"
          },
          "format": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "title": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
